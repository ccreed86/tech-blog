<!-- Loop over each object in the projects array -->
{{#each posts as |posts| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <a href="/posts/{{posts.id}}">{{posts.title}}</a>
    </h2>
    <p>Created by {{posts.user_username}} on {{format_date posts.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{posts.body}}
    </p>
    <p>{{comments.body}}</p>
  </div>
    <p>
    <button class="btn btn-primary">Comment</button>
  </p>
</div>
{{/each}}
